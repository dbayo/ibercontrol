.page-header
  = link_to client_path(@client), :class => 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    Atras
  = link_to edit_client_place_path(@client, @place), :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    Editar
  = link_to new_client_place_service_path(@client, @place), :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    Nuevo Service
  %h1= "Local #{@place.nombre}"


.page-header
  %h1 Listing services

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Nombre servicio
        %th Baja?

    %tbody
      - @services.each do |service|
        %tr
          %td= link_to service.nombre, [@client, @place, service]
          %td= service.baja

