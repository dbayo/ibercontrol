%ul.nav.nav-sidebar
  %li
    .row
      .col-sm-12
        = form_tag '/clients', method: 'GET' do
          .input-group{style: 'margin: 0 10px;'}
            %input.form-control{:placeholder => "Buscar cliente...", :type => "text", name: 'client_search'}
              %span.input-group-btn
                = submit_tag 'Buscar', class: "btn btn-default"
  %br
  %li
    = link_to 'Listado de clientes', clients_path
  - if @client && @client.persisted?
    %li
      = link_to 'Editar cliente', edit_client_path(@client)
  %li
    = link_to 'Crear nuevo cliente', new_client_path

  - if @client && @client.persisted?
    %hr
    %li
      = link_to 'Crear nuevo local', new_client_place_path(@client)

  %hr
    %li
      %a{:href => "#"} Estadisticas